[Unit]
Description=Telegram Alert Notifier Service
Documentation=https://github.com/YOUR_USERNAME/system-monitor-telegram
After=network.target

[Service]
Type=simple

# --- IMPORTANT ---
# You must change these paths to match the location where you place the scripts.
# For example, /opt/system-monitor-telegram/
ExecStart=/path/to/your/scripts/notifier.sh
WorkingDirectory=/path/to/your/scripts/

Restart=always
RestartSec=10
User=root

[Install]
WantedBy=multi-user.target
